{
    "name": "markus-michalski/osticket-custom-css-loader",
    "description": "osTicket plugin that automatically loads custom CSS files for Staff Panel and Client Portal",
    "type": "osticket-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Markus Michalski",
            "email": "info@markus-michalski.net"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "CustomCssLoader\\": "src/"
        },
        "classmap": [
            "class.CustomCssLoaderPlugin.php",
            "config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CustomCssLoader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=max"
    },
    "config": {
        "sort-packages": true
    }
}
